{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "repositories": ["JalexChen/renovate"],
  "customDatasources": {
    "docker-jammy": {
      "defaultRegistryUrlTemplate": "https://download.docker.com/linux/ubuntu/dists/jammy/pool/stable/amd64/",
      "format": "html"
    }
  },
  "customManagers": [
    {
    "customType": "regex",
    "fileMatch": ["manifest2.yml"],
    "matchStrings": [
      "docker: 5:(?<docker_version>.+)",
      "containerd: (?<containerd_version>.+)",
      "docker-compose: (?<compose_version>.+)"
    ],
    "datasourceTemplate": "custom.docker-jammy-amd64",
    "depNameTemplate": "${depName}",
    "currentValueTemplate": "${currentValue}",
    "versioningTemplate": "deb"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["custom.docker-jammy"],
      "matchDepNames": ["${depName}"],
      "extractVersion": "(?<depName>docker)-ce_(?<docker_version>.+)_amd64\\.deb$|(?<depName>containerd)\\.io_(?<containerd_version>.+)_amd64\\.deb|(?<depName>docker-compose)-plugin_(?<compose_version>.+)_amd64\\.deb"
    },
    {
      "groupName": "ubuntu-2204",
      "groupSlug": "ubuntu-2204-test",
      "matchFileNames": ["manifest2.yml"],
      "matchDatasources": [
        "custom.docker-jammy"
      ]
    }
  ]
}
