{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["manifest.yml"],
      "matchStrings": ["(?<depName>): 5:(?<currentValue>)"],
      "datasourceTemplate": "custom.docker"
    }
  ],
  "customDatasources": {
    "docker": {
      "defaultRegistryUrlTemplate": "https://download.docker.com/linux/ubuntu/dists/jammy/pool/stable/amd64/",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.docker"],
      "extractVersion": "\\d+\\.\\d+\\.\\d+-\\d+~ubuntu\\.\\d+\\.\\d+~\\w+"
    }
  ]
}
