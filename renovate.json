{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["manifest.yml"],
      "matchStrings": ["go: (?<currentValue>.+)"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    },
    {
      "customType": "regex",
      "fileMatch": ["manifest.yml"],
      "matchStrings": ["nodelts: (?<currentValue>20.+)"],
      "depNameTemplate": "nodelts",
      "datasourceTemplate": "custom.nodelts"
    }
  ],
  "customDatasources": {
    "nodelts": {
      "defaultRegistryUrlTemplate": "https://nodejs.org/dist/index.json",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $map($filter($, function($v) { \"version\" : /^20/.test($v.version) })}"
      ]
    }
  }
}
